%p#notice= notice
.post_title
  %b Post:
  %span= @post.title
.post_body
  %pre= @post.body
.post_date
  %b Date:
  %span= @post.data
%h2 Comments
- @post.comments.each do |comment|
  .comment
    .commenter
      %strong Commenter:
      = puts comment.id
      = comment.user.email
    .comment_body
      = comment.body
    - if !defined? current_user
      .u_cant
        you are not sign in - you are not able to edit comments
    - elsif comment.user == current_user
      .edit_com
        = link_to "Edit", edit_post_comment_path(@post, comment), :class=>"btn"
    - else
      .u_cant
        you can`t edit this post
%h2 Add a comment:
= render :partial => 'comments/form'
- unless @post.user == current_user
  %s Edit
- else
  = link_to 'Edit', edit_post_path(@post)
  |
= link_to 'Back', posts_path
