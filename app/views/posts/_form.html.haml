= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :Tags
    %br/
    = f.fields_for :tags, Tag.new do |tag_field|
      = tag_field.text_field :tag_word

    -#= f.autocomplete_field :tags, :url => tags_path
  .for_img
    %img{:src => "/image1.jpg"}/
  .field
    = f.label :data
    %br/
    = f.datetime_select :data
  .actions
    = f.submit
