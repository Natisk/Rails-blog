<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Data:</b>
  <%= @post.data %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
      <% if comment.user_id == current_user.id %>
        <div class="edit_com">
            <%= link_to "Edit", edit_post_comment_path(@post, comment)%>
        </div>
      <%end%>


<% end %>




