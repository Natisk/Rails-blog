.tag_title
  %b Tag:
  %span= @tag.tag_word
.posts
  - unless @tag.posts.empty?
    %h3 Related Post(s)
    - @tag.posts.each do |post|
      .tag_posts
        - if post.status
          %span
            Post title -
          = link_to post.title,  post_path(post.id)
        -else
          %span
            Post title - #{post.title}